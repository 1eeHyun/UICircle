########################################
# üåê Environment Configuration Example
# Copy this file as `.env.properties` and fill in your real credentials
########################################

# ----------------------------------------
# MySQL Database
# ----------------------------------------
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ----------------------------------------
# Gmail SMTP (Mail Sender)
# (Use Gmail App Password, not your actual Gmail password)
# ----------------------------------------
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# ----------------------------------------
# JWT Configuration
# ----------------------------------------
JWT_SECRET=your_jwt_secret_key

# ----------------------------------------
# ‚öôÔ∏è System / JVM Options
# ----------------------------------------
JAVA_TOOL_OPTIONS=-Duser.timezone=UTC

# ----------------------------------------
# Spring Profile
# ----------------------------------------
SPRING_PROFILES_ACTIVE=local

# ----------------------------------------
# Logging Level (Optional overrides)
# ----------------------------------------
logging.level.root=INFO
logging.level.org.hibernate.SQL=OFF
logging.level.org.springframework.web=INFO
