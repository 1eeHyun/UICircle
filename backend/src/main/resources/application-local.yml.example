spring:
  config:
    import: optional:file:.env.properties

  datasource:
    url: jdbc:mysql://127.0.0.1:3306/uic_market?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
    username: ${DB_USERNAME:root}
    password: ${DB_PASSWORD:root}
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    show-sql: true
    hibernate:
      ddl-auto: validate
    properties:
      hibernate:
        format_sql: true
    database-platform: org.hibernate.dialect.MySQL8Dialect
    open-in-view: false

  flyway:
    enabled: true
    locations: classpath:db/migration
    baseline-on-migrate: true

  data:
    redis:
      host: 127.0.0.1
      port: 6379
      repositories:
        enabled: false

  servlet:
    multipart:
      max-file-size: 5MB
      max-request-size: 50MB

sendgrid:
  api-key: ${SENDGRID_API_KEY:your_sendgrid_api_key}

app:
  mail:
    from-email: ${APP_MAIL_FROM:no-reply@example.com}
    frontend-url: ${FRONTEND_URL:http://localhost:5173}

jwt:
  secret: ${JWT_SECRET:your_jwt_secret}
  access-token-expiration: 3600
  refresh-token-expiration: 604800

logging:
  level:
    org.hibernate.SQL: DEBUG
    org.springframework.web: INFO
    org.flywaydb: INFO

cloud:
  aws:
    region:
      static: ${AWS_REGION:us-east-2}
    s3:
      bucket: ${S3_BUCKET:example-bucket}
